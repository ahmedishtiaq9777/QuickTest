@model IEnumerable<QuickTest.Models.Product>

@{
    ViewData["Title"] = "productlist";
    Layout = "/Views/shared/_Layout.cshtml";
}









<div class="content-wrapper" id="list">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0 text-dark">Productlist</h1>
                    <h4>

                        <a asp-action="Upload" class=" fa fa-plus">Add new</a>

                    </h4>
                </div><!-- /.col -->
                @*<div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item"><a href="#">Home</a></li>
                            <li class="breadcrumb-item active">Dashboard</li>
                        </ol>
                    </div>*@<!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
    <!-- Main content -->
    <section class="content" >
        <div class="container-fluid" >
            <div class="row">
                @foreach (Product p in Model)
                {
                    <div class="col-6 col-lg-3">
                        <div class="card">
                            <img class="card-img-top" src="@p.ProductImage" alt="Card image cap">

                            <div class="card-body">
                                <h5 class="card-title text-bold">@p.Title</h5>
                                <p class="card-text">@p.Description.</p>

                            </div>
                            <div class="row" style="width:100%;">
                                <p class="col-12 col-lg-12" style="text-align:end;">@p.Price Rs</p>
                            </div>

                            <div class="row">
                                <div class="col">
                                    <a href="/Seller/EditProduct?proid=@p.ProductId" class="btn btn-primary btn-sm pull-left">Edit</a>
                                    <a href="/Seller/DeleteProduct?proid=@p.ProductId" class="btn btn-primary btn-sm pull-right">Delete</a>
                                </div>
                            </div>

                        </div>
                    </div>


                }

            </div>
        </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>



@section scripts{
    <script>
        var allpro = $(".wrapper").find("#allpro2");
        var sidebar = $(".wrapper").find(".sidebar");
        var selected = sidebar.find(".active");
        selected.removeClass(".active");
        allpro.addClass("active");
    </script>
   

   




}
@section css{
   
    <style>
        

        @@media only screen and (max-width: 768px) {
            /* For mobile phones: */
            .card-title, .card-text

        {
            font-size: small;
        }

        .card-body {
            overflow: scroll;
            display: block;
            width: 100%;
            height: 70px;
        }
        }
    </style>
}








