@section scripts{



    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.0/jquery.min.js"></script>
    <script src="http://cdnjs.cloudflare.com/ajax/libs/raphael/2.1.0/raphael-min.js"></script>
    <script src="http://cdnjs.cloudflare.com/ajax/libs/morris.js/0.5.1/morris.min.js"></script>
    <script>
        var dash = $(".wrapper").find("#dash2");

        var sidebar = $(".wrapper").find(".sidebar");
        var selected = sidebar.find(".active");

        selected.removeClass(".active");
        dash.addClass("active");
    </script>
    <script>
        new Morris.Line({
            // ID of the element in which to draw the chart.
            element: 'line',
            // Chart data records -- each entry in this array corresponds to a point on
            // the chart.
            data: [
                { day: 'Jan', Sales: @Model.Item3.GetValue(0) },
                { day: 'Feb', Sales: @Model.Item3.GetValue(1) },
                { day: 'Mar', Sales: @Model.Item3.GetValue(2)},
                { day: 'Apr', Sales: @Model.Item3.GetValue(3) },
                { day: 'May', Sales: @Model.Item3.GetValue(4) },
                { day: 'June', Sales: @Model.Item3.GetValue(5) },
                { day: 'July', Sales: @Model.Item3.GetValue(6) },
                { day: 'Aug', Sales: @Model.Item3.GetValue(7) },
                { day: 'Sep', Sales: @Model.Item3.GetValue(8) },
                { day: 'Oct', Sales: @Model.Item3.GetValue(9) },
                { day: 'Nov', Sales: @Model.Item3.GetValue(10) },
                { day: 'Dec', Sales: @Model.Item3.GetValue(11) }


            ],
            // The name of the data record attribute that contains x-values.
            xkey: 'day',
            parseTime: false,
            // A list of names of data record attributes that contain y-values.
            ykeys: ['Sales'],
            // Labels for the ykeys -- will be displayed when you hover over the
            // chart.
            labels: ['(Rs)Sales'],
            lineColors: ['#373651']
        });
    </script>
