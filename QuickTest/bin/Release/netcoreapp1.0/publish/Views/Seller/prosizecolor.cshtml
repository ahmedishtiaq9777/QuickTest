@using QuickTest.Models.SellerViewModels;
@model Tuple<ProductSpecification, Basedashboard>

@{
    ViewData["Title"] = "prosizecolor";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0 text-dark">Product Size/Color</h1>

                </div>
            </div>
        </div>
    </div>

    <section class="content">

        <div class="container-fluid">
            <form asp-action="prosizecolor" method="post">

                <h3 class="text-danger">@ViewBag.error</h3>
                <div class="form-horizontal">
                    <h4>SizeColor</h4>
                    <hr />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="Item1.ProductSize" class="col-md-2 control-label"></label>
                        <div class="col-md-10">
                            <select asp-for="Item1.ProductSize" name="ProductSize" class="form-control">
                                <option value="XS">XS</option>
                                <option value="S">S</option>
                                <option value="M">M</option>
                                <option value="L">L</option>
                                <option value="XL">XL</option>
                                <option value="XL">XL</option>
                                <option value="15">15</option>
                                <option value="16">16</option>
                                <option value="17">17</option>
                                <option value="18">18</option>
                                <option value="19">19</option>
                                <option value="20">20</option>
                                <option value="21">21</option>
                                <option value="22">22</option>
                                <option value="23">23</option>
                                <option value="24">24</option>
                                <option value="25">25</option>
                                <option value="26">26</option>
                                <option value="27">27</option>
                                <option value="28">28</option>
                                <option value="29">29</option>
                                <option value="30">30</option>
                                <option value="31">31</option>
                                <option value="32">32</option>
                                <option value="33">33</option>
                                <option value="34">34</option>
                                <option value="35">35</option>
                                <option value="36">36</option>
                                <option value="37">37</option>
                                <option value="38">38</option>
                                <option value="39">39</option>
                                <option value="40">40</option>
                                <option value="41">41</option>
                                <option value="42">42</option>
                                <option value="43">43</option>
                                <option value="44">44</option>
                                <option value="45">45</option>







                            </select>
                            <span asp-validation-for="Item1.ProductSize" class="text-danger" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Item1.ProductColor" class="col-md-2 control-label"></label>
                        <div class="col-md-10">
                            <input asp-for="Item1.ProductColor" name="ProductColor"  required class="form-control" />
                            <span asp-validation-for="Item1.ProductColor" class="text-danger" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Item1.Quantity" class="col-md-2 control-label"></label>
                        <div class="col-md-10">
                            <input asp-for="Item1.Quantity" min="1" type="number" name="Quantity" required class="form-control" />
                            <span asp-validation-for="Item1.Quantity" class="text-danger" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Item1.ProductId" class="col-md-2 control-label"></label>
                        <div class="col-md-10">
                            <input asp-for="Item1.ProductId" type="text" value="@TempData["proid"]" name="ProductId" class="form-control" readonly />
                            <span asp-validation-for="Item1.ProductId" class="text-danger" />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Add Size" class="btn btn-default" />       <a class="btn btn-default" asp-action="Addproduct">Done Sizing</a>

                        </div>

                    </div>

                </div>
            </form>
            @*<form asp-action="Productlist">
                <input type="submit" value="Re" class="btn btn-default" />
            </form>*@

            <div>
                <a asp-action="productlist">Back to List</a>
            </div>
            </div>
        </section>
    </div>
