@model QuickTest.Models.Usertable
@{
    ViewData["Title"] = "New Shop";
    Layout = "~/Views/shared/HomeLayout2.cshtml";
    ViewBag.mes = "1";
}
@section css{
    <style>
        body {
            background: url(../img/Get-bg.jpg) top center no-repeat;
        }

        #success_message {
            display: none;
        }

        #login2 {
            margin-left: 400px;
            margin-top: 150px;
        }

        @@media only screen and (max-width: 768px) {
            #login2 {
                margin-left: 20px;
                margin-top: 80px;
            }

            #headlogin {
                margin-left: 70px;
            }
        }
    </style>

    @*<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />*@
}
<div class="Contact_sec" id="login">




    <!-- \\ Begin Get Section \\ -->
    <div class="Get_sec" style="width:100%;height:100%; height: 100vh;">


        <!-- \\ Begin Left Side \\ -->
        <div class="content-bottom  col-lg-6" id="login2">

            @if (ViewBag.key == "a")
            {
                <h2 style="color:red;">@TempData["error"].ToString()</h2>
            }
            <h2 id="headlogin"> Set Password</h2>
            <br />
            <form id="passresetform" method="post" asp-action="SetPassword">

                <div class="field-group">
                    @*<span class="fa fa-user" aria-hidden="true"></span>*@
                    <span style="color:lightgray;"><i class="fas fa-key"></i></span>
                    <div class="wthree-field">

                        <input asp-for="Password" id="pass" title="Must contain at least one  number and one uppercase and lowercase letter, and at least 8 or more characters" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" name="Password" type="Password" placeholder="Password">
                        <span asp-validation-for="Password" class="text-danger" />

                    </div>

                    @*<img id="img1" src="~/images/interface.png" style="width:30px;height:30px; padding-top:10px;">*@
                </div>
                <div class="field-group">
                    @*<span class="fa fa-user" aria-hidden="true"></span>*@
                    <span style="color:lightgray;"><i class="fas fa-key"></i></span>
                    <div class="wthree-field">

                        <input asp-for="Password" id="Confirmpass" type="Password" placeholder="Confirm Password" required>
                        <span asp-validation-for="Password" class="text-danger" />

                    </div>

                    @*<img id="img1" src="~/images/interface.png" style="width:30px;height:30px; padding-top:10px;">*@
                </div>

                @*<span asp-validation-for="PhoneNo" class="text-danger"></span>*@
                <span id="matcherror" class="pull-right col-12 col-lg-8" style="color:red; visibility:hidden;">Password Not Match</span>


                @*<div class="field-group">
            <span class="fa fa-lock" aria-hidden="true"></span>
            <div class="wthree-field">
                <input name="password" id="myInput" type="Password" placeholder="Password">
            </div>
        </div>*@
                <div class="wthree-field">
                    <button id="confirmreset" type="submit" class="btn">Confirm</button>

                </div>
                <br />
              
            </form>

        </div>
       
      




    </div>
    <!-- // End Get Section // -->

</div>

@section script{



    <script>

        function Validate() {
            var password = document.getElementById("pass").value;
            var confirmPassword = document.getElementById("Confirmpass").value;
            console.log(password);
            console.log(confirmPassword);
            if (password != confirmPassword) {
               // $("#errorrow").show();
                //$("errorcol").show();
                document.getElementById("matcherror").style.visibility = "visible";


                //alert("Passwords do not match.");
                //return false;
            } else {
              //  $("#errorrow").hide();
               // $("errorcol").hide();
                document.getElementById("matcherror").style.visibility = "hidden";
            }

            
        }
     
        $(document).ready(function () {

            var errordiv = document.getElementById("matcherror");

            $("#pass").keyup(Validate);
            $("#Confirmpass").keyup(Validate);

            const formBtn3 = document.querySelector('#confirmreset');

            formBtn3.addEventListener('click', function (e) {
                $("#passresetform").submit(function (n) {

                    n.preventDefault();

                    

                    if (errordiv.style.visibility == "hidden") {

                        document.getElementById("passresetform").submit();

                    } else {

                        alert("Password Not Match with Confirm Password");

                    }
                });
            });
        });



    </script>






}
